{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": [
			"es2015"
		],
		"declaration": true,
		"outDir": "dist",
		"incremental": true,
		"noImplicitOverride": true,
		"moduleResolution": "bundler",
		"isolatedModules": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src",
	],
	"exclude": [
		"node_modules",
		"dist",
		"test",
	],
}
